@model GenericResponseModel<Room>

<!DOCTYPE html>
<html>
<head>
    <title>Room Details</title>
    <!-- Add your styles here -->
</head>
<body>
    <h1>Room Details</h1>
    <div>
        <h2>@Model.Data.RoomNumber</h2>
        <p>Type: @Model.Data.RoomType</p>
        <p>Price: $@Model.Data.Price</p>
        @if (Model.Data.Status == "Available")
        {
            <button onclick="location.href='@Url.Action("ReserveRoom", "Reservation", new { roomId = Model.Data.Id })'">Reserve Room</button>
        }
        else
        {
            <p>This room is currently reserved.</p>
        }
    </div>
</body>
</html>
