@model GenericResponseModel<Room>

<!DOCTYPE html>
<html>
<head>
	<title>Room Details</title>
	<style>
		.split {
			height: 75%;
			width: 50%;
			position: fixed;
			z-index: 1;
			top: 14%;
			overflow-x: hidden;
			padding-top: 20px;
		}
		/* Control the left side */
		.left {
			left: 0;
		}

		/* Control the right side */
		.right {
			right: 0;
		}
		/*esas mesele*/
		.split.right * {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
		}
		/* Control the left side */
		.split.left img {
			width: 300px;
			height: 200px !important;
			border-radius: 10px;
		}

		.split.left .reserved {
			color: #8e44ad;
			font-size: 20px;
		}

		.split.left .details {
			/* float:left; */
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
		}

			.split.left .details p {
				font-size: 20px;
				padding: 10px 10px;
			}

		.split.left a {
			border: 2px solid #8a44ad;
			background-color: #8a44ad;
			color:white;
			padding: 5px;
			border-radius:5px;
		}

			.split.left a:hover{
				background-color:black;
				border:black;
				padding: 5px;
			}

		.split.left .centered{
			border-radius:10px;
			padding:50px 30px;
			background-color: #F2D9FA;;
		}
		/* Control the right side */
		.right {
			right: 0;
			background-color: #ffffff;
			padding-left: 10px;
			overflow-y: scroll; /* Enable vertical scrolling if needed  */
		}

		.split.right .content {
			border: 1px solid #ccc;
			border-radius: 5px;
			padding: 10px;
			margin-bottom: 8px;
			display: flex;
			align-items: center;
		}

			.split.right .content svg {
				width: 30px;
				height: 30px;
				margin-right: 10px;
			}

		.centered {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			text-align: center;
		}

		.slider .centered .content:nth-child(odd) {
		}

		.slider .centered .content:nth-child(even) {
			/* background: lightgreen; */
			background: #cccccc;
		}
	</style>
</head>
<body>
	<div class="split left">
		<div class="centered">
			@if (!string.IsNullOrEmpty(@Model.Data.ImageBase64))
			{
				<img src="data:image/jpeg;base64,@Model.Data.ImageBase64" alt="Room Image" style="height:280px;" />
			}
			<div class="details">
				<p>@Model.Data.RoomNumber</p>
				<p>$@Model.Data.Price</p>
				<p>@Model.Data.RoomType</p>
			</div>
			@if (Model.Data.Status == "Available")
			{
				<a href='@Url.Action("ReserveRoom", "Reservation", new { id = Model.Data.Id })' class="button">Book Now</a>
			}
			else
			{
				<p class="reserved">This room is currently reserved.</p>
			}
		</div>

